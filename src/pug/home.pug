
extends _base

block content
	each palette in page.palettes
		div.palette
			div.title
				h2
					- let href = `palette/${palette.id}`;
					a(href=href) Palette no. #{palette.id}
			div.colors
				each color, index in palette.colors
					- let classname = `pyp${palette.id}${alphabet[index]}`;
					div
						p(class=classname)
						b= color.hex
	div.pagination
		each p in pages
			if p == page
				a current page
			else
				a(href=p.path)= p.number



