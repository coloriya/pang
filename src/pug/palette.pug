
extends _base

mixin LabelColumn
	| !{app.nl}
	div.column.header
		| !{app.nl}
		b.x #
		b.c
		b.r R
		b.g G
		b.b B
		| !{app.nl}
		b.c
		b.h H
		b.s S
		b.l L
		| !{app.nl}
		b.c
	| !{app.nl}



block content
	div.groups
		each group in me.groups
			div.group
				div.title
					h3 Color ##{group.getNIndex()}
				+Colorshelf(group)

	each group in me.groups
		div.palette-detail
			+LabelColumn()
			each color in group.colors
				| !{app.nl}
				- let style = color.getBgStyle();
				div.column
					| !{app.nl}
					b.x= color.getHexCode()
					b.c(style=style)
					b.r= color.json.rgb[0]
					b.g= color.json.rgb[1]
					b.b= color.json.rgb[2]
					| !{app.nl}
					b.c(style=style)
					b.h= color.json.hsl[0]
					b.s= color.json.hsl[1]
					b.l= color.json.hsl[2]
					| !{app.nl}
					b.c(style=style)

				| !{app.nl}
			+LabelColumn()


	div.downloads
		div.title
			h2 Downloads
		div.content
			each download in downloads
				if download.exists()
					+PangDownload(download)


